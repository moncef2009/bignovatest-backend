generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  fullName     String
  email        String         @unique
  phone        String         @unique
  password     String
  refreshTokens RefreshToken[]  // ‚Üê AJOUTER CETTE LIGNE
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@map("users")
}

model Doctor {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  specialty  String
  avatar     String?
  email      String   @unique
  phone      String
  address    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("doctors")
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("refresh_tokens")
}